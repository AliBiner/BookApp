<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GuncellemeActivity"

>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Kitap Ad覺"
            android:ems="10"
            android:id="@+id/etKitapAdGuncelle"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="95dp" android:layout_marginEnd="106dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="200dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Yazar Ad覺"
            android:ems="10"
            android:id="@+id/etYazarGuncelle"
            app:layout_constraintTop_toBottomOf="@+id/etKitapAdGuncelle"
            android:layout_marginEnd="106dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp"
            android:layout_marginTop="20dp"/>
    <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Sayfa Say覺s覺"
            android:ems="10"
            android:id="@+id/etSayfaGuncelle"
            app:layout_constraintTop_toBottomOf="@+id/etYazarGuncelle" android:layout_marginEnd="106dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp" android:layout_marginTop="20dp"/>
    <Button
            android:text="Guncelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnGuncelle"
            app:layout_constraintTop_toBottomOf="@+id/etSayfaGuncelle" android:layout_marginEnd="161dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp" android:layout_marginTop="20dp"/>
    <Button
            android:text="Sil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSil"
            app:layout_constraintTop_toBottomOf="@+id/btnGuncelle"
            android:layout_marginEnd="161dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="156dp"
            android:layout_marginTop="20dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>